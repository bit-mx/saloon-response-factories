{
    "name": "bit-mx/saloon-response-factories",
    "description": "Test saloon requests easily",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "BitMx\\SaloonResponseFactories\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BitMx\\SaloonResponseFactories\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Jorge Enr√≠quez",
            "email": "44071711+jenriquez-bit@users.noreply.github.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.2 || ^8.3 || ^8.4",
        "saloonphp/saloon": "^3.0",
        "illuminate/support": "^11.0 || ^12.0",
        "illuminate/console": "^11.0 || ^12.0",
        "fakerphp/faker": "^1.23"
    },
    "require-dev": {
        "laravel/pint": "^1.15",
        "phpstan/phpstan": "^2.1.17",
        "tomasvotruba/type-coverage": "^2.0",
        "phpstan/extension-installer": "^1.4.3",
        "pestphp/pest": "^3.0",
        "orchestra/testbench": "^8.0|| ^v9.14.0 || ^v10.0",
        "pestphp/pest-plugin-laravel": "^3.0"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "BitMx\\SaloonResponseFactories\\SaloonResponseFactoriesServiceProvider"
            ]
        }
    }
}
